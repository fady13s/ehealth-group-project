<WindowManager>:
    LogInScreen:
    MainScreen:

<LogInScreen>:
    name: "login"
    email: email
    password: passw

    FloatLayout:

        Label:
            text: "Welcome"
            pos_hint: {"x": 0, "top": 1.2}
            color: 0.1,0.5,0.6,1
            font_size: 60
        Label:
            text: "to the NHS App"
            pos_hint: {"x": 0, "top": 1.1}
            color: 0.1,0.5,0.6,1
            font_size: 25


        MDTextField:
            id: email
            multiline: False
            size_hint: 0.4, None
            pos_hint: {"x": 0.3, "top": 0.5}
            hint_text: "Email"
            required: True


        MDTextField:
            id: passw
            multiline: False
            size_hint: 0.4, None
            password: True
            pos_hint: {"x": 0.3, "top":0.4}
            hint_text: "Password"
            required: True


    MDFlatButton:
        text: "Log In"
        size_hint: 0.3, 0.1
        pos_hint: {"x": 0.35, "top": 0.3}
        on_release:
            app.root.current = "main" if passw.text == "tim" else "login"
            root.manager.transition.direction = "left"

<MainScreen>:
    name: "main"
    MDLabel:
        text: "goodbye"
    MDFlatButton:
        text: "Go Back"
        size_hint: 0.3, 0.1
        pos_hint: {"x": 0.4, "top": 0.5}
        on_release:
            app.root.current= "login"